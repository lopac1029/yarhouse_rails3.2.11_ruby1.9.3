/* Rolling D20 */
div.d20{
	position: relative;
	float: right;
	background-image: url(<%= asset_data_uri 'd20.png' %>);
	background-repeat:no-repeat;
	background-position:left bottom;
	background-size:100% 100%;
	width:9em;
	height:9em;
	margin:-12% 15% 0% 0%;
	animation:animated_div 20s 3;
	animation-delay:-5s;
	animation-timing-function:ease-in-out;
	-moz-animation:animated_div 20s 3; /* Firefox */
	-moz-animation-delay:-5s; /* Firefox */
	-moz-animation-timing-function:ease-in-out; /* Firefox */
	-webkit-animation:animated_div 20s 3; /* Safari and Chrome */
	-webkit-animation-delay:-5s ; /* Safari and Chrome */
	-webkit-animation-timing-function:ease-in-out; /* Safari and Chrome */
	}
